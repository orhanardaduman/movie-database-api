{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/../src/$1"
  },
  "testTimeout": 30000,
  "verbose": true,
  "collectCoverage": true,
  "coverageDirectory": "../coverage",
  "coveragePathIgnorePatterns": [
    "node_modules",
    ".entity.ts",
    ".constants.ts"
  ]
}
